				th(
					class="sortable-column"
					data-size="100"
					data-name="yeu_cau_khac"
				) Yêu cầu khác
				th(
					class="sortable-column"
					data-size="100"
					data-format="number"
					data-name="do_tuoi"
				) Độ tuổi
				th(
					class="sortable-column"
