form(
	class="template_form"
	data-role="validator"
	action="javascript:"
)
	.row
		.col-md-6.col-lg-3
			label Loại đơn hàng
			select(
				class="primary"
				data-role="select"
				data-filter="false"
				data-validate="required not=-1"
			)
				option(
					value="-1"
					class="d-none"
				)
				option Kỹ sư Việt Nhật
				option Thực tập sinh
				option Điều dưỡng
			.invalid_feedback Vui lòng chọn
		.col-md-6.col-lg-3
			label Công ty tiếp nhận
			select(
				class="primary"
				data-role="select"
				data-validate="required not=-1"
			)
				option(
					value="-1"
					class="d-none"
				)
				option Công ty tiếp nhận 1
				option Công ty tiếp nhận 2
				option Công ty tiếp nhận 3
			.invalid_feedback Vui lòng chọn
		.col-md-6.col-lg-3
			label Địa chỉ làm việc (Tỉnh)
			select(
				class="primary"
				data-role="select"
				data-validate="required not=-1"
			)
				option(
					value="-1"
					class="d-none"
				)
				option Hokkaidō
				option Aomori
				option Iwate
				option Miyagi
			.invalid_feedback Vui lòng chọn
		.col-md-6.col-lg-3
			label Ngành nghề
			select(
				class="primary"
				data-role="select"
				data-filter="false"
			data-validate="required not=-1"
			)
				option(
					value="-1"
					class="d-none"
				)
				option Ngành nghề 1
				option Ngành nghề 2
				option Ngành nghề 3
			.invalid_feedback Vui lòng chọn
		.col-lg-6
			label Tiêu đề
			input(
				type="text"
				data-role="input"
				readonly
				placeholder="Tiêu đề Tiếng Việt [tự động]"
			)
		.col-lg-6
			label &nbsp;
			input(
				type="text"
				data-role="input"
				readonly
				placeholder="Tiêu đề Tiếng Nhật [tự động]"
			)
	.row
		.col-lg-4
			label Địa chỉ cụ thể
			input(
				type="text"
				data-role="input"
				placeholder="Nhập số nhà"
			)
		.col-lg-3
			label Thời gian làm việc
			select(
				data-role="select"
				data-filter="false"
			)
				option 8:00 - 17:00
				option 7:00 - 18:00
		.col-lg-3
			label Thời gian khác (hh:mm - hh:mm)
			.inline-form
				.form-group
					input(
						type="checkbox"
						data-role="checkbox"
					)
					input(
						type="text"
						data-role="input"
					)
		.col-12
			label Yêu cầu khác
			textarea(
				data-role="textarea"
				data-clear-button="false"
			)
		.col-lg-3
			label Số lượng tuyển
			.inline-form
				.form-group
					input(
						data-cls-input="w-50px"
						type="text"
						data-role="input"
						data-clear-button="false"
						data-append="Nam"
						data-validate="required number"
					)
					input(
						data-cls-input="w-50px"
						type="text"
						data-role="input"
						data-clear-button="false"
						data-append="Nữ"
						data-validate="required number"
					)
			.invalid_feedback Vui lòng nhập số
		.col-lg-2
			label Lương cơ bản
			input(
				type="text"
				data-role="input"
				data-append="¥"
				placeholder="Chỉ được phép nhập số"
				data-validate="required number"
			)
			.invalid_feedback Vui lòng nhập số
		.col-lg-2
			label Lương thực nhận
			input(
				type="text"
				data-role="input"
				data-append="¥"
				placeholder="Chỉ được phép nhập số"
				data-validate="required number"
			)
			.invalid_feedback Vui lòng nhập số
		.col-lg-5
			label Các khoản khấu trừ
			input(
				type="text"
				data-role="taginput"
				data-random-color="true"
				data-tag-trigger="13"
			)
		.col-lg-4
			label Ngày xuất cảnh (dự kiến)
			input(
				type="text"
				data-role="calendarpicker"
				data-cls-calendar="compact"
				data-week-start="1"
				data-show-header="false"
				data-format="%d-%m-%y"
				data-validate="required"
			)
			.invalid_feedback Vui lòng chọn
		.col-lg-4
			label Trình độ
			select(
				data-role="select"
				data-filter="false"
				data-validate="required not=-1"
			)
				option(
					value="-1"
					class="d-none"
				)
				option Đại học
				option Cao đẳng
				option Trung cấp
				option Trung cấp nghề
				option THPT
			.invalid_feedback Vui lòng chọn
		.col-lg-4
			label Nơi thi
			input(
				type="text"
				data-role="input"
				placeholder="Nhập địa chỉ"
			)
		.col-lg-3
			label Ngày bắt đầu tuyển
			input(
				type="text"
				data-role="calendarpicker"
				data-cls-calendar="compact"
				data-week-start="1"
				data-dialog-point="300"
				data-show-header="false"
				data-format="%d-%m-%Y"
				data-validate="required"
			)
			.invalid_feedback Vui lòng chọn
		.col-lg-3
			label Ngày kết thúc
			input(
				type="text"
				data-role="calendarpicker"
				data-cls-calendar="compact"
				data-week-start="1"
				data-dialog-point="300"
				data-show-header="false"
				data-format="%d-%m-%Y"
				data-validate="required"
			)
			.invalid_feedback Vui lòng chọn
		.col-lg-3
			label Quản lý đơn hàng
			select(
				data-role="select"
				data-validate="required not=-1"
			)
				option(
					value="-1"
					class="d-none"
				)
				option Anh Thanh
				option Anh Minh
				option Chị Thư
				option Chị Khánh
			.invalid_feedback Vui lòng chọn
		.col-lg-3
			label Quản lý đơn hàng ở Nhật
			select(
				data-role="select"
				data-validate="required not=-1"
			)
				option(
					value="-1"
					class="d-none"
				)
				option Anh Thanh
				option Anh Minh
				option Chị Thư
				option Chị Khánh
			.invalid_feedback Vui lòng chọn
		.col-lg-3
			label Fie đính kèm
			input(
				multiple
				type="file"
				data-role="file"
				data-caption="hihi"
				data-mode="drop"
			)
	.col-12
		button(
			class="button primary"
		) Lưu